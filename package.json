{
  "name": "portable-kanban",
  "displayName": "Portable Kanban",
  "description": "This is an extension to create a portable kanban.",
  "version": "0.2.2",
  "author": "harehare",
  "publisher": "harehare",
  "icon": "assets/icon.png",
  "private": true,
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "kanban"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/harehare/portable-kanban.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "portable-kanban.edit",
        "displayName": "Kanban",
        "selector": [
          {
            "filenamePattern": "*.kanban"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "portable-kanban.new",
        "title": "Portable Kanban: Create new Kanban"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PortableKanban",
      "properties": {
        "portable-kanban.theme": {
          "title": "Portable Kanban Theme",
          "type": "string",
          "default": "system",
          "enum": [
            "dark",
            "light",
            "system"
          ],
          "description": "Switch the theme to dark or light."
        },
        "portable-kanban.show-description": {
          "title": "Portable Kanban Show Description",
          "type": "boolean",
          "default": "true",
          "description": "Card description is shown."
        },
        "portable-kanban.show-task-list": {
          "title": "Portable Kanban Show Task List",
          "type": "boolean",
          "default": "true",
          "description": "Card task list is shown."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "NODE_ENV=production webpack --mode production",
    "watch": "NODE_ENV=development webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "xo --fix src/**/*.ts",
    "test": "xo && vitest run"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/react": "^18.3.12",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.3.5",
    "@types/react-linkify": "^1.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.34",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.103.0",
    "@vscode/test-electron": "^2.5.2",
    "css-loader": "^7.1.2",
    "glob": "^11.0.3",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "styled-components": "^6.1.19",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0",
    "xo": "^1.2.2"
  },
  "dependencies": {
    "@mojotech/json-type-validation": "^3.1.0",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "jotai": "^2.13.1",
    "jotai-optics": "^0.4.0",
    "optics-ts": "^2.4.1",
    "uuid": "^11.1.0",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-indiana-drag-scroll": "^3.0.3-alpha",
    "react-linkify": "^1.0.0-alpha",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.1",
    "react-textarea-autosize": "^8.5.9"
  },
  "xo": {
    "prettier": true,
    "space": 2,
    "ignores": [
      "webpack.config.js",
      "babel.config.js",
      "src/vscode.ts",
      "src/extension.ts"
    ],
    "rules": {
      "max-params": "off",
      "import-x/extensions": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "no-bitwise": "off",
      "@typescript-eslint/consistent-type-definitions": "off",
      "unicorn/prefer-string-replace-all": "off",
      "n/file-extension-in-import": "off",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "objectLiteralProperty",
          "format": []
        },
        {
          "selector": "default",
          "format": [
            "camelCase"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "import",
          "format": [
            "camelCase",
            "PascalCase"
          ]
        },
        {
          "selector": "variable",
          "format": [
            "camelCase",
            "UPPER_CASE",
            "PascalCase"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "typeLike",
          "format": [
            "PascalCase"
          ]
        }
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "extendDefaultReplacements": false,
          "replacements": {
            "e": {
              "event": false
            },
            "Props": false
          }
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ]
    }
  }
}
