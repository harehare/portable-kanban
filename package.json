{
  "name": "portable-kanban",
  "displayName": "Portable Kanban",
  "description": "This is an extension to create a portable kanban.",
  "version": "0.1.37",
  "author": "harehare",
  "publisher": "harehare",
  "icon": "assets/icon.png",
  "private": true,
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "kanban"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/harehare/portable-kanban.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "portable-kanban.edit",
        "displayName": "Kanban",
        "selector": [
          {
            "filenamePattern": "*.kanban"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "portable-kanban.new",
        "title": "Portable Kanban: Create new Kanban"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PortableKanban",
      "properties": {
        "portable-kanban.theme": {
          "title": "Portable Kanban Theme",
          "type": "string",
          "default": "system",
          "enum": [
            "dark",
            "light",
            "system"
          ],
          "description": "Switch the theme to dark or light."
        },
        "portable-kanban.show-description": {
          "title": "Portable Kanban Show Description",
          "type": "boolean",
          "default": "true",
          "description": "Card description is shown."
        },
        "portable-kanban.show-task-list": {
          "title": "Portable Kanban Show Task List",
          "type": "boolean",
          "default": "true",
          "description": "Card task list is shown."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "NODE_ENV=production webpack --mode production",
    "watch": "NODE_ENV=development webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "jest --silent=false --verbose false"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@svgr/webpack": "^8.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/react": "^18.2.67",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.2.22",
    "@types/react-linkify": "^1.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.34",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.3.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-electron": "^2.3.9",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@mojotech/json-type-validation": "^3.1.0",
    "date-fns": "^3.6.0",
    "fuse.js": "^7.0.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-indiana-drag-scroll": "^3.0.3-alpha",
    "react-linkify": "^1.0.0-alpha",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.3",
    "react-textarea-autosize": "^8.5.3",
    "recoil": "^0.7.7",
    "styled-components": "^6.1.8",
    "uuid": "^9.0.1"
  }
}
