{
  "name": "portable-kanban",
  "displayName": "Portable Kanban",
  "description": "This is an extension to create a portable kanban.",
  "version": "0.1.35",
  "author": "harehare",
  "publisher": "harehare",
  "icon": "assets/icon.png",
  "private": true,
  "engines": {
    "vscode": "^1.79.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "kanban"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/harehare/portable-kanban.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "portable-kanban.edit",
        "displayName": "Kanban",
        "selector": [
          {
            "filenamePattern": "*.kanban"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "portable-kanban.new",
        "title": "Portable Kanban: Create new Kanban"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PortableKanban",
      "properties": {
        "portable-kanban.theme": {
          "title": "Portable Kanban Theme",
          "type": "string",
          "default": "system",
          "enum": [
            "dark",
            "light",
            "system"
          ],
          "description": "Switch the theme to dark or light."
        },
        "portable-kanban.show-description": {
          "title": "Portable Kanban Show Description",
          "type": "boolean",
          "default": "true",
          "description": "Card description is shown."
        },
        "portable-kanban.show-task-list": {
          "title": "Portable Kanban Show Task List",
          "type": "boolean",
          "default": "true",
          "description": "Card task list is shown."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "NODE_ENV=production webpack --mode production",
    "watch": "NODE_ENV=development webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "jest --silent=false --verbose false"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.21.5",
    "@svgr/webpack": "^8.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/react": "^18.2.14",
    "@types/react-beautiful-dnd": "^13.1.4",
    "@types/react-dom": "^18.2.6",
    "@types/react-linkify": "^1.0.1",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^9.0.1",
    "@types/vscode": "^1.79.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.61.0",
    "@vscode/test-electron": "^2.3.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "glob": "^10.3.0",
    "jest": "^29.5.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.0.4",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@mojotech/json-type-validation": "^3.1.0",
    "date-fns": "^2.30.0",
    "fuse.js": "^6.6.2",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-linkify": "^1.0.0-alpha",
    "react-markdown": "^8.0.7",
    "react-router-dom": "^6.14.0",
    "react-textarea-autosize": "^8.5.1",
    "recoil": "^0.7.7",
    "styled-components": "^5.3.11",
    "uuid": "^9.0.0"
  }
}
